{
  "name": "basscraft",
  "version": "1.0.0",
  "description": "Basscss theme",
  "author": "Brent Jackson",
  "license": "MIT",
  "scripts": {
    "css": "cssnext src/basscraft.css css/basscraft.css",
    "watch:css": "cssnext src/basscraft.css css/basscraft.css -w",
    "css:min": "cssnext src/basscraft.css css/basscraft.min.css -c",
    "watch:css:min": "cssnext src/basscraft.css css/basscraft.min.css -c -w",
    "docs": "doctor-mark",
    "watch:docs": "onchange './docs/**/*' -- npm run docs",
    "serve": "http-server -p 8000",
    "start": "npm run watch:docs & npm run watch:css & npm run watch:css:min & npm run serve"
  },
  "dependencies": {
    "basscss-background-images": "latest",
    "basscss-base-buttons": "latest",
    "basscss-base-forms": "latest",
    "basscss-base-reset": "latest",
    "basscss-base-tables": "latest",
    "basscss-base-typography": "latest",
    "basscss-button-outline": "latest",
    "basscss-button-transparent": "latest",
    "basscss-button-link": "latest",
    "basscss-color-base": "^1.1.2",
    "basscss-color-borders": "latest",
    "basscss-color-forms": "^1.1.1",
    "basscss-color-tables": "latest",
    "basscss-colors": "^1.0.6",
    "basscss-defaults": "^1.0.1",
    "basscss-grid": "latest",
    "basscss-input-range": "^1.1.1",
    "basscss-positions": "latest",
    "basscss-progress": "^1.0.1",
    "basscss-ui-utility-button-sizes": "latest",
    "basscss-utility-headings": "latest",
    "basscss-utility-layout": "latest",
    "basscss-utility-responsive-states": "latest",
    "basscss-utility-typography": "latest",
    "basscss-utility-white-space": "latest",
    "flex-object": "latest"
  },
  "devDependencies": {
    "cssnext": "^1.1.0",
    "doctor-mark": "^1.1.0",
    "http-server": "^0.8.0",
    "onchange": "^1.0.0",
    "watch": "^0.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jxnblk/basscraft.git"
  },
  "keywords": [
    "css",
    "oocss",
    "basscss",
    "theme",
    "merriweather",
    "roboto",
    "colors"
  ],
  "bugs": {
    "url": "https://github.com/jxnblk/basscraft/issues"
  },
  "homepage": "https://github.com/jxnblk/basscraft",
  "doctor_mark": {
    "template": "docs/template.html",
    "stylesheets": [
      "http://fonts.googleapis.com/css?family=Roboto:400,700|Merriweather:400,700",
      "css/basscraft.min.css"
    ]
  }
}
